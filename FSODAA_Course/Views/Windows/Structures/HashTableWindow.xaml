<Window x:Class="FSODAA_Course.Views.Windows.Structures.HashTableWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FSODAA_Course"
        mc:Ignorable="d"
        Title="HashTableWindow" Height="600" Width="1200">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ToolBarTray Grid.Row="0">
            <ToolBar>
                <Button x:Name="ViewFullHashTableButton" Content="Отобразить"
                        Click="ViewHashTable_Click"/>
                <Separator/>
                <Button x:Name="SearchHashTableButton" Content="Поиск"
                        Click="SearchHashTable_Click"/>
                <Separator/>
                <Button x:Name="AddHashTableButton" Content="Добавить"
                        Click="AddHashTable_Click"/>
                <Separator/>
                <Button x:Name="InitializeHashFromFileButton" Content="Добавить с файла"
                    ToolTip="Добавить элементы из файла в ХТ"
                    Click="InitializeHashFromFile_Click"/>
                <Separator/>
                <Button x:Name="SaveHashToFileButton" Content="Сохранить в файл"
                    ToolTip="Сохранить элементы ХТ в файл"
                    Click="SaveHashToFile_Click"/>
                <Separator/>
                <Button x:Name="DeleteHashTableButton" Content="Удалить"
                    ToolTip="Удалить элемент из ХТ"
                    Click="DeleteHashTable_Click"/>
            </ToolBar>
        </ToolBarTray>

        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Column 0 -->
            <DataGrid x:Name="HashDataGrid"
                      Grid.Column="0"
                      AutoGenerateColumns="True"
                      IsReadOnly="True"
                      LoadingRow="HashDataGrid_LoadingRow"
                      FontFamily="Consolas"
                      FontSize="12"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"/>

            <!-- Column 1 -->
            <GridSplitter Grid.Column="1"
                          Width="5"
                          HorizontalAlignment="Stretch"
                          VerticalAlignment="Stretch"
                          Background="Gray"
                          ShowsPreview="True"/>

            <!-- Column 2 -->
            <ScrollViewer Grid.Column="2" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="5">
                    <TextBlock Text="Найденный товар (Goods):"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,0,0,5"/>

                    <StackPanel x:Name="GoodsPanel" Margin="0,0,0,10">
                        <TextBlock Text="{Binding Article}"/>
                        <TextBlock Text="{Binding Name}"/>
                        <TextBlock Text="{Binding Price, StringFormat=C}"/>
                    </StackPanel>

                    <TextBlock Text="Связанные продажи (Sales):"
                               FontWeight="Bold"
                               FontSize="14"
                               Margin="0,10,0,5"/>

                    <DataGrid x:Name="SalesDataGrid"
                              AutoGenerateColumns="True"
                              IsReadOnly="True"
                              FontFamily="Consolas"
                              FontSize="12"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Stretch"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Grid>
</Window>