<Window x:Class="FSODAA_Course.ReportSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки отчёта" Height="360" Width="450" ResizeMode="CanResize" WindowStartupLocation="CenterOwner">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Фильтр по дате -->
        <TextBlock Text="Фильтр по дате:" FontWeight="Bold" Margin="0,0,0,5"/>
        <ComboBox x:Name="DateFilterType" Grid.Row="1" SelectedIndex="0" Margin="0,0,0,10">
            <ComboBoxItem Content="Все даты"/>
            <ComboBoxItem Content="Конкретная дата"/>
            <ComboBoxItem Content="Период дат"/>
        </ComboBox>

        <StackPanel x:Name="SingleDatePanel" Grid.Row="2" Margin="0,0,0,10" Visibility="Collapsed">
            <TextBlock Text="Дата (дд.мм.гггг):"/>
            <TextBox x:Name="SingleDateInput" />
        </StackPanel>

        <StackPanel x:Name="DateRangePanel" Grid.Row="3" Margin="0,0,0,10" Visibility="Collapsed">
            <TextBlock Text="Начальная дата (дд.мм.гггг):"/>
            <TextBox x:Name="StartDateInput" />
            <TextBlock Text="Конечная дата (дд.мм.гггг):" Margin="0,5,0,0"/>
            <TextBox x:Name="EndDateInput" />
        </StackPanel>

        <!-- Фильтр по артикулу -->
        <TextBlock Text="Фильтр по артикулу:" FontWeight="Bold" Grid.Row="4" Margin="0,10,0,5"/>
        <StackPanel Grid.Row="5" Orientation="Horizontal">
            <RadioButton x:Name="AllArticlesRadio" Content="Все артикулы" IsChecked="True" Margin="0,0,10,0"/>
            <RadioButton x:Name="SpecificArticleRadio" Content="Конкретный артикул:" Margin="0,0,5,0"/>
            <TextBox x:Name="ArticleInput" Width="120" IsEnabled="False"/>
        </StackPanel>

        <!-- Новые фильтры: Название и Продавец -->
        <TextBlock Text="Дополнительные фильтры:" FontWeight="Bold" Grid.Row="6" Margin="0,10,0,5"/>
        <StackPanel Grid.Row="7" Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Продавец:" Width="80" VerticalAlignment="Center"/>
                <TextBox x:Name="SellerInput" Width="200"/>
            </StackPanel>
        </StackPanel>

        <!-- Кнопки -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="ОК" Click="OkButton_Click" Width="70" Margin="0,0,10,0" Padding="5,2"/>
            <Button Content="Отмена" Click="CancelButton_Click" Width="70" Padding="5,2"/>
        </StackPanel>
    </Grid>
</Window>